<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="salario.Paginas.inclusao">
    <ContentPage.Content>
		<ScrollView Orientation="Vertical">
			<StackLayout BackgroundColor="Lavender">
				<Image Source="botao_inserir.png" HorizontalOptions="CenterAndExpand"/>
				<Label Text="Inclusão de Funcionarios" Font="Times new roman"    
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand"
				FontSize="Large"
				TextColor="Brown"/>
				<Label Text="Nome: " FontSize="Medium"
				TextColor="Blue"/>
				<Entry x:Name="txt_nome"  FontSize="Medium"
				TextColor="Red"/>
				<Label Text="Cargo: " FontSize="Medium"
				TextColor="Blue"/>
				<Entry x:Name="txt_cargo" FontSize="Medium"
				TextColor="Red"/>
				<Label Text="Valor por Hora R$ " FontSize="Medium"
				TextColor="Blue"/>
				<Entry x:Name="txt_vh" FontSize="Medium"
				TextColor="Red" Keyboard="Numeric"/>
				<Label Text="Horas Trabalhadas: " FontSize="Medium"
				TextColor="Blue"/>
				<Entry x:Name="txt_ht" FontSize="Medium"
				TextColor="Red" Keyboard="Numeric"/>
				<Button Text="Enviar" x:Name="btn_enviar" FontSize="Medium"
				TextColor="DarkGreen" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>