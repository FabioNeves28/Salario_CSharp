<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="salario.Paginas.exclusao">
    <ContentPage.Content>
		<StackLayout BackgroundColor="Orange">
			<Image Source="botao_excluir.png"/>
			<Label Text="Exclusão de Funcionários" Font="Times new roman"    
                HorizontalOptions="CenterAndExpand"
				FontSize="Large"
				TextColor="DarkBlue"/>
			<Label Text="Digite o Código:" FontSize="Medium"
				TextColor="Blue"/>
			<Entry x:Name="txt_codigo"/>
			<Button Text="Excluir" x:Name="btn_excluir" FontSize="Medium"
				TextColor="Red"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>